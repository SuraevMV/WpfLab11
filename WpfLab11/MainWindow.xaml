<Window x:Class="WpfLab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab11"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <UniformGrid Rows="1">
        <Path Stroke="Black" Fill="Red" >
            <Path.Data>
                <CombinedGeometry>
                    <CombinedGeometry.Geometry1>
                        <GeometryGroup FillRule="EvenOdd">
                            <EllipseGeometry Center="100,100" RadiusX="50" RadiusY="50"/>
                            <EllipseGeometry Center="100,100" RadiusX="40" RadiusY="40"/>
                        </GeometryGroup>
                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <RectangleGeometry Rect="100,-5,90,10">
                            <RectangleGeometry.Transform>
                                <RotateTransform Angle="45"/>
                            </RectangleGeometry.Transform>
                        </RectangleGeometry>
                    </CombinedGeometry.Geometry2>
                </CombinedGeometry>                
            </Path.Data>
        </Path>
    </UniformGrid>
</Window>
